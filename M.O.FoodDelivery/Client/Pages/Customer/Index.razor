<div class="container-fluid mt-5">
    <div class="row">
        <!-- Nearby Restaurants Section-->
        <div class="col-md-6 text-left">
            <h4 class="categories">
                Nearby Restaurants
            </h4>
            <div class="row">
                <RestaurantCard RestaurantImage="images/ramachandra_parlour.jpeg"
                                RestaurantName="Ramachandra Parlour"
                                CuisineType="South Indian"
                                Rating="4.0"
                                PricePerPax="$20 for 2"
                                DeliveryTime="30min">
                </RestaurantCard>

                <RestaurantCard RestaurantImage="images/uma_parlour.jpeg"
                                RestaurantName="Uma Parlour - Pure Vegetarian"
                                CuisineType="South Indian"
                                Rating="3.2"
                                PricePerPax="$15 for 2"
                                DeliveryTime="15min">
                </RestaurantCard>
                <RestaurantCard RestaurantImage="images/swap_diet_meal.jpeg"
                                RestaurantName="Swap - Diet Meal Box"
                                CuisineType="Healthy Food, Salads"
                                Rating="4.5"
                                PricePerPax="$13 for 2"
                                DeliveryTime="15min">
                </RestaurantCard>
                <RestaurantCard RestaurantImage="images/the_good_bowl.jpeg"
                                RestaurantName="The Good Bowl - Traditional Bowls"
                                CuisineType="North Indian, Punjabi"
                                Rating="4.8"
                                PricePerPax="$15 for 2"
                                DeliveryTime="25min">
                </RestaurantCard>
            </div>
        </div>
        <!-- Recommended Food Items Section-->
        <div class="col-md-6 text-left">
            <h4 class="categories">
                Recommended Food Items
            </h4>
            <div class="row">
                <DishCard DishImage="images/paneer_tikka_rice_bowl.jpeg"
