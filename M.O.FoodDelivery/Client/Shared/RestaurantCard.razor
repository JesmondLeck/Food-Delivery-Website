<div class="card col-lg-5 mt-1 mr-1">
    <img src="@RestaurantImage" class="img img-fluid card-img-top" alt="">
    <div class="card-body">
        <h3 class="dish-name card-text">
            @RestaurantName
        </h3>
        <div class="row">
            <div class="col-lg-7">
                <h5 class="cuisine-type">
                    @CuisineType
                </h5>
            </div>
            <div class="col-lg-5">
                <h5 class="rating">
                    <span class="oi oi-star"></span> @Rating
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-7">
                <AuthorizeView>
                    <NotAuthorized>
                        <h5>
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                            <span class="delivery-time">Sign In For Estimated Delivery Time</span>
                        </h5>
                    </NotAuthorized>
                    <Authorized>
                        <h5>
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                            <span class="delivery-time">@DeliveryTime</span>
                        </h5>
                    </Authorized>
                </AuthorizeView>
            </div>
            <div class="col-lg-5">
                <h5 class="price-per-pax ">
                    <i class="fa fa-users" aria-hidden="true"></i> @PricePerPax
                </h5>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string RestaurantImage { get; set; }

    [Parameter]
    public string RestaurantName { get; set; }

    [Parameter]
    public string CuisineType { get; set; }

    [Parameter]
    public string Rating { get; set; }

    [Parameter]
    public string PricePerPax { get; set; }

    [Parameter]
    public string DeliveryTime { get; set; }
}
