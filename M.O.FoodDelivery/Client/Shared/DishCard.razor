<div class="card col-lg-5 mt-1 mr-1">
    <img src="@DishImage" class="img img-fluid card-img-top" alt="">
    <div class="card-body">
        <h3 class="dish-name card-text">
            @DishName
        </h3>
        <div class="row">
            <div class="col-lg-7">
                <h5 class="restaurant-name">
                    @RestaurantName
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <h5 class="price-tag">
                    <i class="fa fa-tag" aria-hidden="true"></i> @Price
                </h5>
            </div>
            <div class="col-lg-7">
                <AuthorizeView>
                    <NotAuthorized>
                        <h5>
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                            <span class="delivery-time">Sign In For Estimated Delivery Time</span>
                        </h5>
                    </NotAuthorized>
                    <Authorized>
                        <h5>
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                            <span class="delivery-time">@DeliveryTime</span>
                        </h5>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string DishImage { get; set; }

    [Parameter]
    public string DishName { get; set; }

    [Parameter]
    public string RestaurantName { get; set; }

    [Parameter]
    public string Price { get; set; }

    [Parameter]
    public string DeliveryTime { get; set; }
}
